@model GraduateDesignBk.Models.AnnounceView
@{
    Layout = "~/Views/Shared/_HeaderLayout.cshtml";
    ViewBag.Title = "公告详情";
}


<link href="~/Content/ggao.css" rel="stylesheet" />
<div class="row">
    <div class="mypage">
        <div class="col-md-12" style="text-align:center">
            <h3 style="color:#800000;font-weight: 600;">@Model.Title</h3>
        </div>
        <div class="col-md-12">
            @*class="page-information"*@
            <div class="col-md-6"></div>
            <div class="col-md-6 page-information">
                <div class="col-md-9">
                    发布:@Model.FromName
                        &nbsp;
                    日期:@Model.Time
                </div>
                <div class="col-md-3">
                    浏览数:@Model.ReadTimes
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <hr style="border-top:1px dotted #CCC;;margin-top:0px" width="100%" size="3">
        </div>
        <div style="padding: 5px 10px;">
            <p style="text-indent: 2em;">
                @(new HtmlString(Model.Content))
            </p>
        </div>
    </div>
</div>