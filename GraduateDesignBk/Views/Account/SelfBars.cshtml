@*@*@model  GraduateDesignBk.Models.PersonBars*@

@{
    ViewBag.Title = "SelfBars";
    ViewDataDictionary dic = new ViewDataDictionary();
    dic.Add("Id", Model.Id);
    dic.Add("userType", Model.userType);
    dic.Add("self", Model.userType);
    dic.Add("nav_title", "帖子");
}

@Html.Partial("_NavSelfPartial", Model.counts, dic)

<style>
    img {
        width: 50px;
    }

    hr {
        margin-top: 4px;
        margin-bottom: 13px;
        border: 0px;
        border-top: 1px solid #777777;
    }
    /*a:link {
        color: black;
