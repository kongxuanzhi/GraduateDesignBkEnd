@model  GraduateDesignBk.Models.ChangeRoleModel
@{
    ViewBag.Title = "编辑角色";
}
<ol class="breadcrumb">
    <li><a href="/Role/Index">角色管理</a></li>
    <li class="active">编辑角色</li>
</ol>
@using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <input type="hidden"  name="Id" value="@Model.Id" />
    @Html.AntiForgeryToken();
    <h4> 编辑角色 </h4>
    @Html.ValidationSummary("", new { @class = "text-denger" })
    <div class="form-group">
        @Html.LabelFor(m => m.RoleName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <h5>@Model.RoleName</h5>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" class="btn btn-default" value="修改" />
        </div>
    </div>
}